<!-- starat profile  -->
<div class="container mt-4">
    <div class="row gap-xxl-5">
        <div class="col-3">
            <h1>Profile</h1>
            <hr>
            <form action="/profile?_method=patch" method="post">
                <div class="mb-3">
                    <label class="form-label mb-0">Name</label>
                    <input type="text" class="form-control" value="{{user.name}}" name="name">
                </div>
                <div class="mb-3">
                    <label class="form-label mb-0">Email</label>
                    <input type="email" class="form-control" value="{{user.email}}" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label mb-2">Profile Picture</label>
                    <div class="avatar_img circular--square mb-2" style="background-image: url('{{user.avatar}}');">
                    </div>
                    <input type="url" class="form-control" value="{{user.avatar}}" name="avatar">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success mt-1">Save Changes</button>
                </div>
            </form>
        </div>
        <div class="col">
            <h1>
                My Listing
            </h1>
            <hr>
            <div class="mb-3">
                <a href="/houses/create">
                    <button class="btn btn-success mt-1">List a House</button>
                </a>
            </div>
            {{!-- start listing --}}
            {{#if houses}}
                {{#each houses as |house|}}
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <img src="{{house.photos.[0]}}" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title mb-0">{{house.title}}</h5>
                                    <small class="text-secondary">{{house.rooms}} rooms &middot; ${{house.price}}/night</small>
                                    <p class="card-text">{{house.description}}
                                    </p>
                                        <a href="/houses/{{house.id}}/edit">
                                            <button class="btn btn-outline-secondary" type="submit">Edit</button>
                                        </a>
                                    <a href="/houses/{{house.id}}">
                                        <button class="btn btn-outline-success" type="submit">View</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="mb-3">
                    <input type="text" class="form-control" value="You don't have any houses listed">
                </div>
            {{/if}}
        </div>
    </div>
</div>
<!-- end profile -->