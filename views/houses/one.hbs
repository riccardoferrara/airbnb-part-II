{{> nav }}
<!-- start house pictures -->
<div class="house_pics">
    <div class="main_img" style="background-image: url('{{house.photos.[0]}}')"></div>
    <div class="house_thumbnails">
        {{#each house.photos as |photo|}}
            <div class="house_thumbnail" style="background-image: url('{{photo}}'); "></div>
        {{/each}}
    </div>
</div>
<!-- end house pictures -->
<!-- start house description section  -->
<section class="description_section p-4">
    <div class="container">
        <div class="row">

            <div class="col-8">

                <!-- house informations  -->
                <div class="house_description">
                    <h1>Luxury Villa in Chaweng</h1>
                    <i class="fas fa-map-marker-alt green"></i>
                    <small>Koh Samui 4 Rooms</small>
                    <!-- host avatar -->
                    <div class="host_avatar mt-lg-2">
                        <div class="avatar_img rounded-circle" style="background-image: url('https://randomuser.me/api/portraits/men/11.jpg');">
                        </div>
                        <div class="avatar_img m-lg-2">
                            <small>hosted by</small>
                            <h6>Riccardo Ferrara</h3>
                        </div>
                    </div>
                    <!-- description -->
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor
