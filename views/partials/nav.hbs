<div class="header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light bg-white">
        <div class="container">
            <a href="./">
                <img class="logo" src="https://res.cloudinary.com/dsko6ntfj/image/upload/v1642399114/portal/web%20development%20beginners/05%20Project%20Airbnb/assets/logo-airbnb.png">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
                {{!-- right side buttons user logout login --}}
                {{#if user}}
                    {{!--  name button - logout button --}}
                    <form class="d-flex gap-3">
                        <button class="btn btn-outline-success me-2" type="submit">
                            <img src="{{user.avatar}}" class="rounded-circle" style="height: 20px;">
                            {{user.name}}
                        </button>
                    </form>
                    <a href="/auth/logout">
                        <button class="btn btn-outline-success">Logout</button>
                    </a>
                {{else}}
                    {{!-- login button --}}
                    <form class="d-flex gap-3" action="/auth/login"">
                        <button class="btn btn-outline-secondary me-2" type="submit">Login</button>
                    </form>
                {{/if}}
                {{!-- end of buttons --}}
            </div>
        </div>
    </nav>
</div>

